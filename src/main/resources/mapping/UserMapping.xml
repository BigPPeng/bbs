<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.zzu.dao.UserDao">


    <resultMap id="BaseMap" type="cn.zzu.model.table.User">
        <id property="u_id" column="id"/>
        <result property="u_name" column="name"/>
        <result property="u_password" column="password"/>
        <result property="u_sex" column="sex"/>
        <result property="u_email" column="email"/>
        <result property="u_qq" column="qq"/>
        <result property="u_signature" column="signature"/>
        <result property="u_phone" column="phone"/>
        <result property="u_address" column="address"/>
        <result property="u_tx" column="touXiang"/>
        <result property="u_grzy" column="personPage"/>
        <result property="u_realname" column="realName"/>
        <result property="u_createtime" column="createTime"/>
        <result property="u_label" column="userLabel"/>
        <result property="u_status" column="status"/>
    </resultMap>


    <select id="findCount" resultType="int">
      SELECT COUNT(u.id)
      FROM user u
    </select>

    <select id="selectAll" resultMap="BaseMap" >
        SELECT *
        FROM user
    </select>



</mapper>